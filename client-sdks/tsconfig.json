{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "composite": true,
    "types": ["jest", "node"]
  },
  "include": ["packages/*/src/**/*", "packages/*/**/*.test.ts", "packages/*/**/*.spec.ts"],
  "exclude": ["node_modules", "dist"]
}